<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Holiday Requests</title>
</head>
<body>
<h1>Holiday Requests</h1>

<ul id="requestsList">
    <% requests.forEach(request => { %>
        <li>
            <%= `${request.employeeId}: Start date ${request.startDate} to End date ${request.endDate} - ${request.status}` %>
            <form action="/approve-reject-holiday" method="post">
                <input type="hidden" name="idOfEmployee" value="<%= request.employeeId %>">
                <input type="hidden" name="requestId" value="<%= requests.indexOf(request) %>">
                <button type="submit" name="action" value="approve">Approve</button>
                <button type="submit" name="action" value="reject">Reject</button>
                <button type="submit" name="action" value="update">Update</button>
            </form>
        </li>
    <% }); %>
    <% approvedRequests.forEach(approvedRequest => { %>
        <li>
            <%= `${approvedRequest.employeeId}: Start date ${approvedRequest.startDate} to End date ${approvedRequest.endDate} - ${approvedRequest.status}` %>
        </li>
    <% }); %>
</ul>

</body>
</html>
